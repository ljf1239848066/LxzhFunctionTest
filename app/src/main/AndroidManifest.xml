<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lxzh123.funcdemo">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="24" />
    <!-- 目标版本影响部分功能 15不允许在主线程连接网络 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lxzh123.quickmark.QuickMarkActivity"
            android:label="@string/title_activity_quick_mark" />
        <activity
            android:name="com.lxzh123.sendemail.SendMailActivity"
            android:label="@string/title_activity_send_mail"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.lxzh123.savedata.xml.XmlSaveDataActivity"
            android:label="@string/title_activity_xml_save_data" />
        <activity
            android:name="com.lxzh123.savedata.xml.XmlSaveDataNextActivity"
            android:label="@string/title_activity_xml_save_data_next" />
        <activity
            android:name="com.lxzh123.notification.NotificationActivity"
            android:label="@string/title_activity_notification" />
        <activity
            android:name="com.lxzh123.filebrowser.FileBrowserActivity"
            android:label="@string/title_activity_filebrowser" />
        <activity
            android:name="com.lxzh123.record.RecordActivity"
            android:label="@string/title_activity_record" />
        <activity
            android:name="com.lxzh123.record1.SoundRecorderActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.SoundRecorder">
            <intent-filter>
                <action android:name="android.provider.MediaStore.RECORD_SOUND" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lxzh123.inputmethod.InputMethodActivity"
            android:label="@string/title_activity_inputmethod" />
        <activity
            android:name="com.lxzh123.location.LocationActivity"
            android:label="Location" />
        <activity
            android:name="com.lxzh123.weather.WeatherActivity"
            android:label="Weather" />
        <activity
            android:name="com.lxzh123.ftp.FTPActivity"
            android:label="FTP" />
        <activity
            android:name="com.lxzh123.bcreceiver.BCReceiverActivity"
            android:label="@string/title_activity_bcreceiver" />

        <service android:name="com.lxzh123.bcreceiver.LxzhService" />

        <activity
            android:name="com.lxzh123.bootstart.BootStartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="BootStart" />

        <receiver android:name="com.lxzh123.bootstart.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.lxzh123.sortalgo.SortActivity"
            android:label="SortAlgorithm" />
        <activity
            android:name="com.lxzh123.findalgo.FindActivity"
            android:label="FindAlgorithm"/>
    </application>

</manifest>